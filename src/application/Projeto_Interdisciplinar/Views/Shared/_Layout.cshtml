<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.cdnfonts.com/css/fresh-steak" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/Shared/layout.js"></script>

    @*essa parte abaixo é para permitir adicionar um css no head a partir de qualquer página*@
    @RenderSection("styles", false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="font-family: 'Fresh Steak', sans-serif;">SmartMart</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav">
                       <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Produto" asp-action="Detalhes">Produtos</a>
                       </li>
                       <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Carrinho" asp-action="Index">Carrinho de Compras</a>
                       </li>
                      @if (ViewBag.Logado == true)
                       {
                           @if (ViewBag.Perfil == "Funcionario")
                           {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Gráficos Demonstrativos</a>
                                </li>
                           }
                           
                           @if (ViewBag.Perfil == "Administrador")
                            {
                                 <li class="nav-item">
                                     <a class="nav-link text-dark" asp-area="" asp-controller="Acesso" asp-action="Index">Controle de Acesso</a>
                                 </li>
                           
                                 <li class="nav-item dropdown">
                                     <a class="nav-link dropdown-toggle text-dark" href="#" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Dados Gerais</a>
                                     <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                         <a class="dropdown-item text-dark" asp-area="" asp-controller="Produto" asp-action="Index">Produtos</a>
                                         <a class="dropdown-item text-dark" asp-area="" asp-controller="Fornecedor" asp-action="Index">Fornecedores</a>
                                         <a class="dropdown-item text-dark" asp-area="" asp-controller="Cliente" asp-action="Index">Clientes</a>
                                     </div>
                                 </li>
                            }

                            <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Autenticacao" asp-action="LogOff">Logoff</a></li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link text-dark" href="javascript:modalLogin()">Login</a></li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Sobre">Sobre</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-muted footer">
        <div class="container">
            &copy; 2023 - Powered by SmartMart - <a asp-area="" asp-controller="Home" asp-action="Sobre">Sobre</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)


    <div class="modal" id="modal_validacao">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title" id="titulo-modal"></h2>
                    <button type="button" class="close btn" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="modal-body">

                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</body>
</html>